[colors]
transparent = #00000000
background = ${xrdb:color0}

black = #502f343f
red = #50fb4934
green = #50b8bb26
yellow = #50fabd2f
blue = #5083a598
magenta = #50d3869b
cyan = #508ec07c
white = #fff
grey = #50a89984

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/top]
width = 100%
height = 28
offset-x = 0
offset-y = 0
locale = pl_PL.UTF-8

background = ${colors.background}
foreground = ${colors.white}

font-0 = Inconsolata:size=9:weight=Regular
font-1 = FontAwesome:size=10;0
font-2 = Inconsolata:size=10:weight=bold
font-3 = Inconsolata:size=10:weight=Regular

modules-left = i3 
modules-center = cmus
modules-right = eth volume date

underline-size = 3
overline-size = 3

spacing = 1
padding-left = 0
padding-right = 0 
module-margin-left = 1 
module-margin-right = 1

fixed-center = true

[module/i3]
type = internal/i3
strip-wsnumbers = true

format = <label-state> <label-mode>

label-mode-padding = 1

label-focused-padding = 1
label-focused-font = 3

label-unfocused-padding = 1
label-unfocused-font = 4

label-urgent-foreground = ${colors.red}
label-urgent-padding = 1
label-urgent-font = 3

label-visible-foreground = ${colors.green}
label-visible-padding = 1
label-visible-font = 3

[module/cmus]
type = custom/script

exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

; Don't show it if disconnected
format-disconnected =
format-connected-prefix-background = ${colors.background}
label-connected-background = ${colors.background}
label-connected = " %local_ip% "

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
master-mixer = Master
label-muted = ï€¦ muted
 
ramp-volume-0 = ï€¦
ramp-volume-1 = ï€§
ramp-volume-2 = ï€¨
mapping = true

[module/date]
type = internal/date
interval = 1.0
date = %Y-%m-%d%
time = %H:%M

date-alt = %A%, %d %B %Y
time-alt = %H:%M:%S

format = ðŸ•“ <label>
format-background = ${colors.background} 
format-padding = 2

label = %date% %time%
label-foreground = ${colors.white}

[settings]
screenchange-reload = true
